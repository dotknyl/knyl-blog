---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Pet Projects</div>
  </div>

  <HorizontalCard
    title="Reverse Proxy"
    img="/blog/yarp.png"
    desc="A .NET reverse proxy with Let's Encrypt SSL, run on Docker."
    url="#"
    badge="COMING SOON"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="knyL Blog"
    img="/profile.jpg"
    desc="This blog was built with Astro, deployed on Github Page."
    url="https://github.com/dotknyl/knyl-blog"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Researching</div>
  </div>

  <HorizontalCard
    title="Keda Scaling Job"
    img="/blog/keda.png"
    desc="Researching Keda Scaling Job with Redis stream."
    url="https://github.com/dotknyl/keda-scaling-job"
    badge="NEW"
  />
</BaseLayout>
